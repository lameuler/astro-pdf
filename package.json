{
    "name": "astro-pdf",
    "version": "1.2.0",
    "description": "A simple Astro integration to generate PDFs from built pages",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "!dist/**/*.map"
    ],
    "scripts": {
        "build": "tsup && tsc",
        "prepack": "npm run build && npm test",
        "test": "tsc -p test && vitest run",
        "coverage": "vitest run --coverage",
        "lint": "eslint",
        "format": "prettier . --write",
        "format:check": "prettier . --check",
        "version": "changeset version && npm install --lockfile-only"
    },
    "author": "Lam Eu Ler",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lameuler/astro-pdf.git"
    },
    "keywords": [
        "astro-integration",
        "pdf",
        "astro",
        "puppeteer",
        "pdf-generation"
    ],
    "dependencies": {
        "@puppeteer/browsers": "^2.4.0",
        "kleur": "^4.1.5",
        "puppeteer": "^23.5.3"
    },
    "peerDependencies": {
        "astro": "^4.4.4"
    },
    "devDependencies": {
        "@changesets/changelog-github": "^0.5.0",
        "@changesets/cli": "^2.27.9",
        "@eslint/js": "^9.12.0",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/eslint__js": "^8.42.3",
        "@types/eslint-config-prettier": "^6.11.3",
        "@types/node": "^22.7.4",
        "@vitest/coverage-istanbul": "^2.1.4",
        "astro": "^4.16.10",
        "cheerio": "^1.0.0",
        "eslint": "^9.12.0",
        "eslint-config-prettier": "^9.1.0",
        "glob": "^11.0.0",
        "globals": "^15.12.0",
        "pdf2json": "^3.1.4",
        "prettier": "^3.3.3",
        "tsup": "^8.3.5",
        "typescript-eslint": "^8.13.0",
        "vitest": "^2.1.4"
    },
    "workspaces": [
        "./",
        "./test/fixtures/**"
    ],
    "publishConfig": {
        "provenance": true
    }
}
